<h1>login</h1>

<%= form_with(url: login_path) do |f| %>
  <div class="form-group">
    <%= f.label 'Email' %>
    <%= f.text_field :email, value: @email, placeholder: 'taro.yamada@example.com' %>
  </div>

  <div class="form-group">
    <%= f.label 'password' %>
    <%= f.text_field :password,  placeholder: 'password' %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
